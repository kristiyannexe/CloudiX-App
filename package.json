{
    "name": "cloudix-app",
    "version": "1.4.2",
    "description": "CloudiX Hosting Desktop App - Earn coins, complete quests, redeem hosting",
    "main": "src/main/main.js",
    "author": "CloudiX Hosting <contact@cloudixhosting.site>",
    "license": "MIT",
    "homepage": "https://cloudixhosting.site",
    "scripts": {
        "start": "npm run dev",
        "dev": "concurrently \"npm run dev:vite\" \"npm run dev:electron\"",
        "dev:vite": "vite src/renderer --host",
        "dev:electron": "wait-on http://localhost:5173 && electron .",
        "build": "vite build",
        "dist": "npm run build && electron-builder",
        "dist:win": "npm run build && electron-builder --win --publish never",
        "release": "npm run build && electron-builder --win --publish always"
    },
    "dependencies": {
        "discord-rpc": "^4.0.1",
        "electron-store": "^8.1.0",
        "electron-updater": "^6.1.7"
    },
    "devDependencies": {
        "concurrently": "^8.2.2",
        "electron": "^28.1.0",
        "electron-builder": "^24.9.1",
        "vite": "^5.0.10",
        "wait-on": "^7.2.0"
    },
    "build": {
        "appId": "com.cloudixhosting.app",
        "productName": "CloudiX App",
        "copyright": "Copyright Â© 2025 CloudiX Hosting",
        "artifactName": "${productName}-Setup-${version}.${ext}",
        "directories": {
            "output": "release",
            "buildResources": "assets"
        },
        "files": [
            "src/**/*",
            "dist/**/*",
            "assets/icon.png",
            "!**/*.map",
            "!**/node_modules/*/{CHANGELOG.md,README.md,readme.md,test,__tests__,tests,docs,example,examples}",
            "!**/node_modules/.bin"
        ],
        "asar": true,
        "compression": "maximum",
        "publish": {
            "provider": "github",
            "owner": "kristiyannexe",
            "repo": "CloudiX-App",
            "releaseType": "release"
        },
        "win": {
            "target": [
                {
                    "target": "nsis",
                    "arch": [
                        "x64"
                    ]
                }
            ],
            "icon": "assets/icon.png",
            "publisherName": "CloudiX Hosting",
            "requestedExecutionLevel": "asInvoker",
            "verifyUpdateCodeSignature": false,
            "signAndEditExecutable": false
        },
        "nsis": {
            "oneClick": true,
            "perMachine": false,
            "allowElevation": true,
            "deleteAppDataOnUninstall": false,
            "runAfterFinish": true
        },
        "mac": {
            "target": "dmg",
            "icon": "assets/icon.png"
        },
        "linux": {
            "target": "AppImage",
            "icon": "assets/icon.png"
        }
    }
}